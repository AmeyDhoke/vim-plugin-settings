{
    "editor.formatOnSave": true,
    "editor.suggest.insertMode": "replace",
    "files.autoSave": "afterDelay",
    "editor.fontSize": 18,
    "code-runner.runInTerminal": true,
    "liveServer.settings.CustomBrowser": "chrome",
    "emmet.includeLanguages": {
        "javascript": "javascriptreact"
    },
    "workbench.colorCustomizations": {
        "editorError.foreground": "#00000000",
        "editorWarning.foreground": "#00000000",
        "editorInfo.foreground": "#00000000"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "vim.smartRelativeLine": true,
    "editor.lineNumbers": "relative",

    "vim.leader": "<Space>",
    "vim.hlsearch": true,
    "vim.normalModeKeyBindingsNonRecursive": [
        // NAVIGATION
        // switch b/w buffers
        { "before": ["leader", "enter"], "after": ["o", "<Esc>"] },
        { "before": ["leader", "O"], "after": ["O", "<Esc>"] },
        // { "before": ["j"], "after": ["j","z", "z"] },
        // { "before": ["k"], "after": ["k","z", "z"] },
        { "before": ["ctrl+t"], "after": ["ctrl+u", "z", "z"] },
        { "before": ["ctrl+f"], "after": ["ctrl+d", "z", "z"] },
        {
            "before": ["leader", "w"],
            "commands": ["editor.action.moveLinesDownAction"]
        },
        {
            "before": ["ctrl+k"],
            "commands": ["editor.action.moveLinesUpAction"]
        },
        {
            "before": ["ctrl+j"],
            "commands": ["editor.action.moveLinesDownAction"]
        },

        { "before": ["<S-h>"], "commands": [":bprevious"] },
        { "before": ["<S-l>"], "commands": [":bnext"] },

        // splits
        { "before": ["leader", "v"], "commands": [":vsplit"] },
        { "before": ["leader", "s"], "commands": [":split"] },

        // panes
        {
            "before": ["leader", "h"],
            "commands": ["workbench.action.focusLeftGroup"]
        },
        {
            "before": ["leader", "j"],
            "commands": ["workbench.action.focusBelowGroup"]
        },
        {
            "before": ["leader", "k"],
            "commands": ["workbench.action.focusAboveGroup"]
        },
        {
            "before": ["leader", "l"],
            "commands": ["workbench.action.focusRightGroup"]
        },

        {
            "before": ["leader", "n", "e"],
            "commands": ["workbench.explorer.fileView.focus"]
        },

        // NICE TO HAVE
        { "before": ["leader", "w"], "commands": [":w!"] },
        { "before": ["leader", "q"], "commands": [":q!"] },
        { "before": ["leader", "x"], "commands": [":x!"] },
        {
            "before": ["[", "d"],
            "commands": ["editor.action.marker.prev"]
        },
        {
            "before": ["]", "d"],
            "commands": ["editor.action.marker.next"]
        },
        {
            "before": ["<leader>", "c", "a"],
            "commands": ["editor.action.quickFix"]
        },
        {
            "before": ["leader", "f"],
            "commands": ["workbench.action.quickOpen"]
        },
        {
            "before": ["leader", "p"],
            "commands": ["editor.action.formatDocument"]
        },
        {
            "before": ["g", "h"],
            "commands": ["editor.action.showDefinitionPreviewHover"]
        }
    ],
    "vim.visualModeKeyBindings": [
        // Stay in visual mode while indenting
        { "before": ["<"], "commands": ["editor.action.outdentLines"] },
        { "before": [">"], "commands": ["editor.action.indentLines"] },
        // Move selected lines while staying in visual mode
        { "before": ["J"], "commands": ["editor.action.moveLinesDownAction"] },
        { "before": ["K"], "commands": ["editor.action.moveLinesUpAction"] },
        // toggle comment selection
        {
            "before": ["leader", "c"],
            "commands": ["editor.action.commentLine"]
        },
        {
            "before": ["ctrl+j"],
            "commands": ["editor.action.moveLinesDownAction"]
        },
        {
            "before": ["ctrl+k"],
            "commands": ["editor.action.moveLinesUpAction"]
        }
    ],
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "go.toolsManagement.autoUpdate": true,
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "workbench.activityBar.location": "top",
    "prettier.tabWidth": 4,
    "editor.minimap.enabled": false,
    "background.editorBackgrounds": [],
    "background.windowBackgrounds": [
        "c:/Users/pac3mxd/Documents/Downloads/wallpapers/**"
    ],
    "background.backgroundOpacity": [0.8, 0.9, 0.9, 0.9],
    "background.backgroundChangeTime": [300, 0, 0, 0],
    "editor.autoClosingQuotes": "never",
    "editor.autoClosingBrackets": "never",
    "background.backgroundRepeat": [
        "No Repeat",
        "No Repeat",
        "No Repeat",
        "No Repeat"
    ]
}

